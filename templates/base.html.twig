<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle`
						           and uncomment the following Encore helpers to start using Symfony UX #}
		<link rel="stylesheet" href="https://bootswatch.com/5/darkly/bootstrap.min.css">
		{% block stylesheets %}
			{#{{ encore_entry_link_tags('app') }}#}
		{% endblock %}

		{% block javascripts %}
			{#{{ encore_entry_script_tags('app') }}#}
		{% endblock %}
	</head>
	<body>
		<div style="align-right">
			<nav class="navbar navbar-expand-lg navbar-dark bg-primary" style="display: flex;align-items: center">
				<div class="container-fluid">
					<a class="navbar-brand" href="{{ path('accueil') }}"><img style=" height: 40px;" src="{{ asset('/images/logo.png') }}" alt=""></a>
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
						{% block enteteConnecte %}{% endblock %}
					</button>
				</div>
			</nav>
		<div>
		<div class="flex-container">
		{% block body %}
		{% endblock %}
		</div>
	</body>
</html>
