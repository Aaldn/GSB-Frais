{% extends 'visiteur/index.html.twig' %}

{% block contenuPage %}

	{# {{ dump(fichesFrais) }} #}
	<div class="container-fluid h-100">
		<div class="row h-100">
			<div class="pt-3 card mb-3">
				<div class="example-wrapper">
				{# {{dump(fichesFrais[0])}} #}
					<table class="table table-bordered">
						<thead
							class="thead-dark">{# Saisie des fiches de frais #}
						</thead>
						<tr>
							<th>idVisiteur</th>
							{# <th>mois</th> #}
							<th>nbJustificatifs</th>
							<th>montantValide</th>
							<th>dateModif</th>
							<th>idEtat</th>
						</tr>
						<tbody>
						
							{% for uneFicheFrais in fichesFrais %}
							<tr>
								<td>{{uneFicheFrais.id}}</td>
								{# <td>{{uneFicheFrais.mois}}</td> #}
								<td>{{uneFicheFrais.nbJustificatifs}}</td>
								<td>{{uneFicheFrais.montantValide}}</td>
								<td>{{uneFicheFrais.dateModif | date('m/Y')}}</td>
								<td>{{uneFicheFrais.idetat.id}}</td>
								</tr>
							{% endfor %}
							
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
