{% extends 'base.html.twig' %}

{% block title %}Gestion Frais{% endblock %}

{% block enteteConnecte %}
	<div for="utilisateur" style="align:center" class="h3 mb-1 font-weight-normal">
		{% if app.session.get('typeUtilisateur') == "Visiteur" %}
			{{ app.session.get('typeUtilisateur') ~ " médical" }}
		{% else %}
			{{app.session.get('typeUtilisateur')}}
		{% endif %}
	</div>
	<div>
	<ul class="nav navbar-nav navbar-right">
		<li class="nav-item">
			<a class="nav-link" href="#">
				{{app.session.get('utilisateur')['nom'] ~ ' ' ~ app.session.get('utilisateur')['prenom']}}
			</a>
		</li>
		<li class="nav-item">
			<a class="nav-link" href="{{ path('se_deconnecter') }}">Se déconnecter...</a>
		</li>
	</ul>
	</div>
{% endblock %}

{% block body %}

{% block sidebarVisiteur %}

	<div class="container-fluid h-100">
		<div class="row h-100 py-4">
			<div class="col-sm-2">
				<div class="card mb-3">
					<ul class="nav flex-sm-column justify-content-center">
						<li>
							<a class="nav-link" href="{{path('visiteur')}}">Accueil</a>
						</li>
						<li>
							<a class="nav-link" href="{{path('saisir_fiche_frais')}}">Renseigner fiche de frais</a>
						</li>
						<li>
							<a class="nav-link" href="{{path('consulter_fiche_frais')}}">Consulter mes fiches de frais</a>
						</li>
					</ul>
				</div>
			</div>
			<div class="col">
				{% block contenuPage %}{% endblock %}
			</div>
		</div>
	</div>

{% endblock %}

{% endblock %}
