{% extends 'base.html.twig' %}

{% block title %}Espace Visiteur médical{% endblock %}

{% block inner_navbar %}
	<div for="utilisateur" class="h4 mb-1 font-weight-normal">
		{{app.user.typeUtilisateur}}
	</div>
	<div class="d-flex">
		<ul class="navbar-nav me-auto">
			<li class="nav-item dropdown">
				<a class=" nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
					<img src="{{app.user.photo}}" alt="" width="30" height="30" class="rounded-circle">
					<span class="d-none d-sm-inline mx-1">{{app.user.nom ~ ' ' ~ app.user.prenom}}</span>
				</a>
				<div class="dropdown-menu dropdown-menu-dark shadow">
					<a class="dropdown-item" href="#">Accueil</a>
					<a class="dropdown-item" href="#">Profil</a>
					<a class="dropdown-item" href="#">Paramètres</a>
					<hr class="dropdown-divider"></hr>
				<a class="dropdown-item" href="{{ path('deconnexion') }}">Déconnexion</a>
				</div>
			</li>
		</ul>
	</div>
{% endblock %}

{% block body %}
		<div class="container-fluid h-100">
			<div class="row gx-3 h-100 py-4">

				{% block sidebarVisiteur %}
					<div class="sidebar col-sm-2">
						<div class="card mb-3 bg-dark">
							<ul class="nav flex-sm-column justify-content-center ">
								<li class="nav-item">
									<a class="nav-link link-dark" href="{{path('visiteur')}}"><i class="fas fa-home me-2 text-primary"></i>Accueil</a>
								</li>
								<li class="nav-item">
									<a class="nav-link link-dark" href="{{path('saisir_fiche_frais')}}"><i class="fas fa-pen me-2 text-primary"></i>Renseigner ma fiche</a>
								</li>
								<li class="nav-item">
									<a class="nav-link link-dark" href="{{path('consulter_fiches_frais')}}"><i class="fas fa-search me-2 text-primary"></i>Consulter mes fiches</a>
								</li>
							</ul>
						</div>
					</div>
				{% endblock %}
				
				<div class="col">
					<div class="container-fluid h-100">
						<div class="row h-100">
							{% block flash_messages %}{% endblock %}
							<div class="pt-3 card mb-3">
								<div class="example-wrapper">

									{% block page_content %}
										{% for message in app.flashes('connexionOk') %}
											<div class="alert alert-primary" role="alert">
												{{message}}
											</div>
										{% endfor %}
									{% endblock %}

								</div>
							</div>
						</div>
					</div>
				</div>
				
			</div>
		</div>
{% endblock %}
