{% extends 'base.html.twig' %}

{% block title %}Gestion Frais{% endblock %}

{% block enteteConnecte %}
	<div for="utilisateur" style="align:center" class="h3 mb-1 font-weight-normal">
			{{app.session.get('typeUtilisateur')}}
	</div>
	<div>
	<ul class="nav navbar-nav navbar-right">
		<li class="nav-item">
			<a class="nav-link" href="#">
				{{app.session.get('utilisateur')['nom'] ~ ' ' ~ app.session.get('utilisateur')['prenom']}}
			</a>
		</li>
		<li class="nav-item">
			<a class="nav-link" href="{{ path('se_deconnecter') }}">Se d√©connecter...</a>
		</li>
	</ul>
	</div>
{% endblock %}

{% block body %}

{% block sidebarVisiteur %}

	<div class="container-fluid h-100">
		<div class="row h-100 py-4">
			<div class="col-sm-2">
				<div class="card mb-3 bg-dark">
					<ul class="nav flex-sm-column justify-content-center">
						<li>
							<a class="nav-link" href="{{path('comptable')}}">Accueil</a>
						</li>
						<li>
							<a class="nav-link" href="{{path('valider_fiche_frais')}}">Valider fiche de frais</a>
						</li>
						<li>
							<a class="nav-link" href="{{path('suivre_fiche_frais')}}">Suivre le paiement fiche de frais</a>
						</li>
					</ul>
				</div>
			</div>
			<div class="col">
					{% for message in app.session.flashbag.get('connexionOk') %}
						<div class="container-fluid h-100">
							<div class="row h-100">
								<div class="pt-3 card mb-3">
									<div class="example-wrapper">
										<div class="alert alert-primary" role="alert">
											{{message}}
										</div>
									</div>
								</div>
							</div>
						</div>
					{% endfor %}
				{% block contenuPage %}{% endblock %}
			</div>
		</div>
	</div>

{% endblock %}

{% endblock %}
